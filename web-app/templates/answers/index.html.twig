{% extends 'base.html.twig' %}

{% block title %}Answers index{% endblock %}

{% block body %}
    <h1>Answers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Answer</th>
                <th>Answer_image</th>
                <th>Answer_audio</th>
                <th>Correct</th>
                <th>IsActive</th>
                <th>CreatedAt</th>
                <th>CreatedBy</th>
                <th>UpdatedAt</th>
                <th>UpdatedBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.answer }}</td>
                <td>{{ answer.answerImage }}</td>
                <td>{{ answer.answerAudio }}</td>
                <td>{{ answer.correct ? 'Yes' : 'No' }}</td>
                <td>{{ answer.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ answer.createdBy }}</td>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ answer.updatedBy }}</td>
                <td>
                    <a href="{{ path('app_answers_show', {'id': answer.id}) }}">show</a>
                    <a href="{{ path('app_answers_edit', {'id': answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_answers_new') }}">Create new</a>
{% endblock %}
