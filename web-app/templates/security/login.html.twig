{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section class="vh-100 d-flex justify-content-center align-items-center" style="background-color: #ab47bc;">
		<div class="container py-5">
			<div class="row">
				<div class="col-md-8 col-lg-10 mx-auto">
					<div class="card rounded-3" style="border-radius: 1rem;">
						<div class="row g-0">
							<div class="col-md-6">
								<img src="{{ asset('img/imagen_login.jpg') }}" alt="formulario de inicio de sesión" class="img-fluid rounded-start" style="border-radius: 1rem 0 0 1rem;"/>
							</div>
							<div class="col-md-6">
								<div class="card-body p-4 p-lg-5 text-black">
									<form method="post">
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}

										<div class="text-center mb-3">
											<img src="{{ asset('img/imagen_logo.png') }}" width="300vw">
										</div>

										<div class="d-flex align-items-center mb-3 pb-1">
											<span class="h1 fw-bold mb-0">Por favor inicia sesión</span>
										</div>

										<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Iniciar sesión en su cuenta</h5>

										<div class="form-group">
											<label for="inputEmail">Correo electronico</label>
											<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto my-2" autocomplete="email" required autofocus>
										</div>

										<div class="form-group">
											<label for="inputPassword">Contraseña</label>
											<input type="password" name="password" id="inputPassword" class="form-control mx-auto my-2" autocomplete="current-password" required>
										</div>

										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

										<div class="d-flex justify-content-between align-items-center mb-3">
											<p class="small">¿No tienes cuenta?
												<a href="{{ path('app_register')}}">Crea una cuenta</a>
											</p>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
												<label class="form-check-label" for="rememberMe">Recordarme</label>
											</div>
										</div>

										<button class="btn btn-primary auto" type="submit">Iniciar sesión</button>

									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


