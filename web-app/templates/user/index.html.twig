{% block content %}
	<div class="user_table" >
		<h2>Usuarios</h2>
			<div class="col-sm-12 col-md-12 col-lg-12 col-lx-12">
				<table id="datatable_user" class="table">
					<thead class="table-dark">
						<tr>
							<th>Email</th>
							<th>IsVerified</th>
							<th>Name</th>
							<th>Lastname</th>
							<th>Dni</th>
							<th>Season</th>
							<th>University</th>
							<th>Birthday</th>
							<th>Gender</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.email }}</td>
								<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
								<td>{{ user.name }}</td>
								<td>{{ user.lastname }}</td>
								<td>{{ user.dni }}</td>
								<td>{{ user.season.name }}</td>
								<td>{{ user.university.name }}</td>
								<td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ user.gender }}</td>
								<td>
									<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="17">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('app_user_new') }}" class="btn btn-primary">Create new</a>
			</div>
	
	</div>

